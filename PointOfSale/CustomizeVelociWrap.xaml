<Page x:Class="PointOfSale.CustomizeVelociWrap"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomizeVelociWrap">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Click="OnHoldDressing" Grid.Column="0" Grid.Row="0" Content="Hold Dressing"/>
        <Button Click="OnHoldLettuce" Grid.Column="1" Grid.Row="0" Content="Hold Lettuce"/>
        <Button Click="OnHoldCheese" Grid.Column="0" Grid.Row="1" Content="Hold Cheese"/>
        <Button Click="OnDone" Grid.Column="1" Grid.Row="1" Content="Done" FontSize="16" Background="#FFE58585" Foreground="White"/>
    </Grid>
</Page>
