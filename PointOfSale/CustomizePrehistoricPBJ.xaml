<Page x:Class="PointOfSale.CustomizePrehistoricPBJ"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomizePrehistoricPBJ">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Click="OnHoldPeanutButter" Grid.Column="0" Grid.Row="0" Content="Hold Peanut Butter"/>
        <Button Click="OnHoldJelly" Grid.Column="1" Grid.Row="0" Content="Hold Jelly"/>
        <Button Click="OnDone" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Content="Done" FontSize="16" Background="#FFE58585" Foreground="White"/>
    </Grid>
</Page>
