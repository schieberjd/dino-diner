<Page x:Class="PointOfSale.CustomizeSteakosaurusBurger"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomizeSteakosaurusBurger">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Click="OnHoldBun" Grid.Column="0" Grid.Row="0" Content="Hold Bun"/>
        <Button Click="OnHoldPickle" Grid.Column="1" Grid.Row="0" Content="Hold Pickle"/>
        <Button Click="OnHoldMustard" Grid.Column="2" Grid.Row="0" Content="Hold Mustard"/>
        <Button Click="OnHoldKetchup" Grid.Column="0" Grid.Row="1" Content="Hold Ketchup"/>
        <Button Click="OnDone" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Content="Done" FontSize="16" Background="#FFE58585" Foreground="White"/>
    </Grid>
</Page>
