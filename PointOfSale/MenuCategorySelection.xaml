<Page x:Class="PointOfSale.MenuCategorySelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu Category Selection">

    <Grid>
        <Label HorizontalContentAlignment="Center" Content="Add to Order" FontSize="16"/>
        <Grid Margin="0,35,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Grid.Row="0" Content="Combos"  Click="SelectCombo" FontSize="16"/>
            <Button Grid.Column="1" Grid.Row="0" Content="Entrees" Click="SelectEntree" FontSize="16"/>
            <Button Grid.Column="0" Grid.Row="1" Content="Sides" Click="SelectSide" FontSize="16"/>
            <Button Grid.Column="1" Grid.Row="1" Content="Drinks" Click="SelectDrink" FontSize="16"/>
        </Grid>
    </Grid>
</Page>
